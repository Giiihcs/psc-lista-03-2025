algoritmo "CalculadoraSimples"

var
   num1, num2, resultado: real
   operacao: caractere

inicio
   escreva("Digite o primeiro número: ")
   leia(num1)

   escreva("Digite o segundo número: ")
   leia(num2)

   escreva("Digite o símbolo da operação (+, -, *, /, ^): ")
   leia(operacao)

   se (operacao = "+") entao
      resultado <- num1 + num2
      escreval("Resultado: ", resultado)

   senao
      se (operacao = "-") entao
         resultado <- num1 - num2
         escreval("Resultado: ", resultado)

      senao
         se (operacao = "*") entao
            resultado <- num1 * num2
            escreval("Resultado: ", resultado)

         senao
            se (operacao = "/") entao
               se (num2 <> 0) entao
                  resultado <- num1 / num2
                  escreval("Resultado: ", resultado)
               senao
                  escreval("Erro: Divisão por zero!")
               fimse

            senao
               se (operacao = "^") entao
                  resultado <- num1 ^ num2
                  escreval("Resultado: ", resultado)

               senao
                  escreval("Símbolo de operação inválido!")
               fimse
            fimse
         fimse
      fimse
   fimse
fimalgoritmo