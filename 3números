algoritmo "TresNumeros"

   inteiro n1, n2, n3, maior, menor
   real media

inicio
   escreva("Digite o primeiro número: ")
   leia(n1)

   escreva("Digite o segundo número: ")
   leia(n2)

   escreva("Digite o terceiro número: ")
   leia(n3)

   // Maior número
   maior <- n1
   se (n2 > maior) entao
      maior <- n2
   fimse
   se (n3 > maior) entao
      maior <- n3
   fimse

   // Menor número
   menor <- n1
   se (n2 < menor) entao
      menor <- n2
   fimse
   se (n3 < menor) entao
      menor <- n3
   fimse

   // Média aritmética
   media <- (n1 + n2 + n3) / 3

   escreval("Maior número: ", maior)
   escreval("Menor número: ", menor)
   escreval("Média aritmética: ", media)

fimalgoritmo